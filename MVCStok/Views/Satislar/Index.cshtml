@using MVCStok.Models.Entity @*view de listelemek için entity'mizi yani modelimizi dahil ediyorduk*@
@model List<tbl_Satislar>
@*model adında bi dğeişken oluşturduk ve liste olarak tuttuk*@
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>ÜRÜN</th>
        <th>PERSONEL</th>
        <th>MÜŞTERİ</th>
        <th>FİYAT</th>
        <th>TARİH</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.id</td>
            <td>@x.tbl_Urunler.ad</td>
            <td>@x.tbl_Personeller.ad @x.tbl_Personeller.soyad</td>
            <td>@x.tbl_Musteriler.ad @x.tbl_Musteriler.soyad</td>
            <td>@x.fiyat</td>
            <td>@x.tarih</td>
        </tr>
    }
</table>
<a href="/Satislar/YeniSatis/" class="btn btn-primary">Yeni Satışlar</a>


