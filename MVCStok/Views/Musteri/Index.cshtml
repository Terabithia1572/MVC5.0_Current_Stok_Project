@using MVCStok.Models.Entity @*view de listelemek için entity'mizi yani modelimizi dahil ediyorduk*@

@using PagedList

@using PagedList.Mvc


@model PagedList.IPagedList<tbl_Musteriler>

@*@model List<tbl_Musteriler>*@
@*model adında bi dğeişken oluşturduk ve liste olarak tuttuk*@
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>AD</th>
        <th>SOYADI</th>
        <th>ŞEHİR</th>
        <th>BAKİYE</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.id</td>
            <td>@x.ad</td>
            <td>@x.soyad</td>
            <td>@x.sehir</td>
            <td>@x.bakiye</td>
            <td><a href="/Musteri/MusteriSil/@x.id" class="btn btn-danger">SİL</a></td>
            <td><a href="/Musteri/MusteriGetir/@x.id" class="btn btn-success">GÜNCELLE</a></td>
        </tr>
    }
</table>

@Html.PagedListPager((IPagedList)Model,sayfa=>Url.Action("Index",new { sayfa})) @*Bu method ile Sayfa'da görünecek kısımları belirledik Controller tarafımızda görüntülenecek sayfa sayısı olarak 3 dedik*@
                                                                                @*ve bu method ile diğer sayfalarında görünmesi için sayfa bir pageList verdik mesela kullanıcı sayfa 2'yi görmek isterse 2.sayfayı tıklayacak*@

<a href="/Musteri/YeniMusteri/" class="btn btn-primary">Yeni Müşteri</a>


